{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*",
      ],
      "@hooks/*": [
        "src/hooks/*",
      ],
      "@router/*": [
        "src/router/*",
      ],
      "@constants/*": [
        "src/constants/*",
      ],
      "@services/*": [
        "src/services/*",
      ],
      "@store/*": [
        "src/store/*",
      ],
      "@models/*": [
        "src/models/*",
      ],
      "@assets/*": [
        "assets/*",
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/custom.d.ts",
    "assets/**/*",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
